html, body {
	margin: 0;
	padding: 0;
	}

.modal_bg {
	background: rgba(0,0,0, .5);
	height: 100%;
	width: 100%;
	position: fixed;
	z-index: 999;
	top: 0;
	}

.modal_container {
	float: right;
	position: relative;
	left: -50%;
	}

.modal_wrapper {
	position: relative;
	left: 50%;
	}

.modal {
	border-radius: 5px;
	background: #999;
	-webkit-animation-fill-mode: both;
	-moz-animation-fill-mode: both;
	box-shadow: 0 0 25px rgba(0,0,0, .5);
	min-width: 150px;
	}

.modal.fixed {
	float: left;
	position: relative;
	margin-top: 150px;
	-webkit-animation-name: fadeInUp;
	-moz-animation-name: fadeInUp;
	-webkit-animation-duration: .5s;
	-moz-animation-duration: .5s;
	}

.modal.moveable {
	position: absolute;
	z-index: 999;
	left: 50%;
	top: 50px;
	-webkit-backface-visibility: visible !important;
	-webkit-animation-name: flipInX;
	-moz-backface-visibility: visible !important;
	-moz-animation-name: flipInX;
	-webkit-animation-duration: 1s;
	-moz-animation-duration: 1s;
	}

.modal_header {
	border-top-left-radius: 5px;
	border-top-right-radius: 5px;
	background: #4791ec;
	color: #fff;
	padding: 5px 10px 3px;
	}

.modal.moveable .modal_header {
	cursor: move;
	}

.modal_header:after {
	content: ".";
    display: block;
    height: 0;
    clear: both;
    visibility: hidden;
	}

.modal_title {
	float: left;
	margin-right: 20px;
	}

.modal_close {
	float: right;
	cursor: pointer;
	}

.modal_content {
	padding: 10px;
	overflow: auto;
	text-align: center;
	}

.modal_buttons {
	width: 100%;
	position: absolute;
	bottom: -35px;
	}

.success .modal_header {
	background: green;
	}